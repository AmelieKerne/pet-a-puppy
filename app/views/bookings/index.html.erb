<div class="container">
<%# if current_user == @current_user_bookings %>
 <h1> HERE ARE THE BOOKING FOR YOUR DOG(S) | SELLER OF THE DOG</h1>

  <% @owner_puppies.each do |puppy| %>
  <% if puppy.bookings.count > 0 %>
    <div class="card-confirm">


      <% puppy.bookings.each do |booking|  %>
          <div class="card-product my-3">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <div class="card-product-infos">
              <h2><%= puppy.name %></h2>
              <p>Your session will start on the <%= booking.start_date %> until the <%= booking.end_date %></p>
              <% if booking.accepted == nil  %>
                  <p> Do you want to accept this booking? </p>
                  <%= link_to 'Yes, accept!', accept_booking_path(booking), class: "btn btn-outline-success btn-sm"%>
                  <%= link_to 'No, reject!', reject_booking_path(booking), class: "btn btn-outline-warning btn-sm" %>
                  <% elsif booking.accepted == false %>
                  <p>Rejected!</p>
              <% else %>
                  <p>Confirmed!</p>
              <% end %>
            </div>
          </div

     <% end %>
  <% end %>
    <% end %>
  </div>

  <%# else %>
  <h1>HERE ARE THE SESSIONS YOU BOOKED WITH A DOG || BUYER OF THE DOG</h1>

    <div class="card-user">
      <% @current_user_bookings.each do |booking| %>
        <%= booking.puppy.name %>
        <%= booking.start_date %>
        <%= booking.end_date %>
        <% if booking.accepted == nil  %>
          <p> Pending ... </p>
        <% elsif booking.accepted == false %>
          <p>Sorry, your booking request got rejected. Find <%= link_to 'more puppies here' , puppies_path  %></p>
        <% else %>
          <p>Yay, you booked a pet-a-puppy session!</p>
        <% end %>
      <% end %>
    </div>
  </div>
<%# end %>






