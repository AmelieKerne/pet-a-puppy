<div class="container">
<h1>Add a puppy to rent</h1>

<%= simple_form_for (@puppy) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.label "Add puppy photo" %>
  <%= f.input :photo, as: :file %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>

</div>
