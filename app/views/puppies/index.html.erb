<div class="banner text-center"
style= "background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= image_path "puppies.jpg" %>');">
  <div class="container">
    <h1>Welcome to Pet-a-Puppy</h1>
    <p>Rent a puppy to have a relaxing time. At a location close to you</p>
    <div class="button-banner"><a class="btn btn-warning" href="#">Discover</a></div>
  </div>
</div>


<div class="container-map">
  <div class="cards pt-3 ">
      <% @puppies.each do |puppy| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path puppy.photo.key %>)">
           <%= link_to puppy.name, puppy_path(puppy) %>
        </div>
      <% end %>
  </div>


<div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>



  <% if policy(Puppy).create? %>
    <%= link_to "New puppy", new_puppy_path %>
  <% end %>
</div>























