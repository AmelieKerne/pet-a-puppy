<div class="container">

  <h1>Pet a puppy, be happy!</h1>

    <div class="row">
      <div class="col-lg-3">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
              <p class="card-text"> <%  @puppies.each do |puppy| %>
                  <%= link_to puppy.name, puppy_path(puppy) %>
                  <!-- <%= image_path '' %> -->
              <% end %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

<div id="map"
     style="width: 50%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

  <% if policy(Puppy).create? %>
    <%= link_to "New puppy", new_puppy_path %>
  <% end %>
</div>


