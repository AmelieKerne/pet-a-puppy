<div class="container">
<h1>Meet the puppy 🐶 </h1>

  <div class="cards">

    <div class="row">
      <div class="col-lg-3">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h2><%= @puppy.name %></h2>
              <p class="card-text"> Get to know <%= @puppy.name %>: <%= @puppy.description %> </p>
              <p><%= @puppy.name %> costs: <%= @puppy.price %> karma points </p>
          </div>
        </div>
      </div>
    </div>
  </div>



<%= link_to "Book session", new_puppy_booking_path(@puppy), class: "btn btn-outline-success md-5" %>

<%= link_to "Back to all puppies", root_path %>

</div>
