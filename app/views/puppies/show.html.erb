<div class="container">
<h1>Meet <%= @puppy.name %> 🐶 </h1>

  <div class="flex-basis">

        <div class="card" style="width: 80rem;">
          <div class="card-body">
              <p class="card-text"> Get to know <%= @puppy.name %>:<%= cl_image_tag @puppy.photo.key, height: 300, width: 400, crop: :fill %>
                <%= @puppy.description %> </p>
              <p><%= @puppy.name %> costs: <%= @puppy.price %> karma points </p>
          </div>
        </div>
  </div>

<% if current_user != @puppy.user %>
  <%= link_to "Book a session now", new_puppy_booking_path(@puppy), class: "btn btn-flat" %>
<% end %>
<%= link_to "Back to all puppies", root_path %>

</div>
